{
  "compilerOptions": {
    "target": "ES2020", // Modern JavaScript output
    "lib": ["DOM", "DOM.Iterable", "ES2020"], // Include DOM and ES features
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip checking node_modules
    "esModuleInterop": true, // Allow default imports from CommonJS
    "allowSyntheticDefaultImports": true, // Simplify default imports
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Enforce consistent file casing
    "module": "ESNext", // Use latest module system
    "moduleResolution": "Node", // Resolve modules like Node.js
    "resolveJsonModule": true, // Allow importing `.json` files
    "isolatedModules": true, // Required for transpiling without type info
    "noEmit": true, // Don't emit output files
    "jsx": "react-jsx" // Use new JSX transform (React 17+)
  },
  "include": ["src"], // Include all files in `src` folder
  "exclude": ["node_modules", "build"] // Exclude common folders
}
